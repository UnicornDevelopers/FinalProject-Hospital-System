﻿

@model List<Hospital_System.Models.DTOs.DepartmentDTO>

@{
    ViewData["Title"] = "Choose Department";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mb-4">Choose Department</h2>

<div class="row">
    @foreach (var department in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <h3 class="card-header">@department.DepartmentName</h3>
                <div class="card-body">
                    @*<h5 class="card-title">Special title treatment</h5>*@
                    @if (department.Description != null)
                    {
                        <h6 class="card-subtitle text-muted">@department.Description</h6>
                    }
                </div>
                <a asp-controller="Appointment" asp-action="SelectDoctor" asp-route-departmentId="@department.Id" >
                <div class="card-body cImage justify-content-center">
                <img src="@department.Image" class=" "  aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle" />
               
                </div>
                </a>
                <div class="card-body d-flex justify-content-center">
                    <a asp-controller="Appointment" asp-action="SelectDoctor" asp-route-departmentId="@department.Id" class="btn btn-primary">Select Department</a>
                </div>
                @*<div class="card-footer text-muted">
            2 days ago
            </div>*@
            </div>
        </div>
    }
</div>

