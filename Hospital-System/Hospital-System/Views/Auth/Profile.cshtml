@using Hospital_System.Auth.Models.DTO;
@using Hospital_System.Models.DTOs.Nurse;
@using Hospital_System.Models.DTOs.Patient;
@using Hospital_System.Models.DTOs;
@model UserDTO


@{
    PatientDTO patient = ViewBag.Pateint;
    DoctorDTO doctor = ViewBag.Doctor;
    NurseDTO nurse = ViewBag.Nurse;

}
    <style>
        body {
            background: rgb(99, 39, 120);
        }

        .form-control:focus {
            box-shadow: none;
            border-color: #BA68C8
        }

        .profile-button {
            background: rgb(99, 39, 120);
            box-shadow: none;
            border: none;
        }

            .profile-button:hover {
                background: #682773;
            }

            .profile-button:focus {
                background: #682773;
                box-shadow: none
            }

            .profile-button:active {
                background: #682773;
                box-shadow: none;
            }

        .back:hover {
            color: #682773;
            cursor: pointer;
        }

        .labels {
            font-size: 11px;
        }

        .add-experience:hover {
            background: #BA68C8;
            color: #fff;
            cursor: pointer;
            border: solid 1px #BA68C8;
        }
    </style>

<script src="https://kit.fontawesome.com/2844f80f7d.js" crossorigin="anonymous"></script>



<div class="container rounded bg-white mt-5 mb-5 justify-content-evenly">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" width="150px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg"><span class="font-weight-bold">@Model.Username</span><span class="text-black-50">@Model.Email</span><span> </span></div>
        </div>
        <div class="col-md-5 border-right">
                @if(patient!=null && doctor==null && nurse==null)
                {
            
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Profile Settings</h4> <i class="fa-solid fa-pen-to-square" id="edit-patient-profile-icon" style="cursor:pointer;"></i>
                    </div>
                    <form method="post">
                        <input asp-for="@patient.Id" hidden />
                    <div class="row mt-2">
                            <div class="col-md-6"><label class="labels">First Name</label><input asp-for="@patient.FirstName" type="text" class="form-control editablePatient" value="@patient.FirstName" readonly></div>
                            <div class="col-md-6"><label class="labels">Last Name</label><input asp-for="@patient.LastName" type="text" class="form-control editablePatient" value="@patient.LastName" readonly></div>
                    </div>
                    <div class="row mt-3">

                            <div class="col-md-12"><label class="labels">Mobile Number</label><input asp-for="@patient.ContactNumber" type="text" class="form-control editablePatient" value="@patient.ContactNumber" readonly></div>
                    <div class="col-md-12">
                            <label class="labels">Address Line 1</label>

                                <input asp-for="@patient.Address" type="text" class="form-control editablePatient" placeholder="enter address line 1" value="@patient.Address" readonly>
                        </div>

                            <div class="col-md-12"><label class="labels">Gender</label><input asp-for="@patient.Gender" type="text" class="form-control editablePatient" value="@patient.Gender" readonly></div>
                            <div class="col-md-12"><label class="labels">Date of Birth</label><input asp-for="@patient.DoB" type="datetime" class="form-control editablePatient" value="@patient.DoB" readonly></div>
                    </div>    
                    <div class="row mt-3">
                            <div class="col-md-6"><label class="labels">Room Number</label><input asp-for="@patient.RoomId" type="text" class="form-control editablePatient" value="@(patient.Rooms==null?"Patient has no Room":patient.Rooms.RoomNumber)" readonly></div>
                        <div class="col-md-6"><label class="labels">Department</label><input type="text" class="form-control" value="@(patient.Rooms?.department?.DepartmentName)"  readonly></div>
                    </div>
                    </form>
                    <div class="mt-5 text-center"><button class="btn btn-primary profile-button" id="save-patient-profile-button"  type="button" hidden>Save Profile</button></div>
                </div>
                }
                else if(patient==null && doctor!=null && nurse==null)
                {
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Profile Settings</h4> <i class="fa-solid fa-pen-to-square" id="edit-doctor-profile-icon" style="cursor:pointer;"></i>
                    </div>
                    <form method="post">
                        <input asp-for="@doctor.Id" hidden/>
                    <div class="row mt-2">
                            <div class="col-md-6"><label class="labels">First Name</label><input asp-for="@doctor.FirstName" type="text" class="form-control editableDoctor" value="@doctor.FirstName" readonly></div>
                            <div class="col-md-6"><label class="labels">Last Name</label><input asp-for="@doctor.LastName" type="text" class="form-control editableDoctor" value="@doctor.LastName" readonly></div>
                    </div>
                    <div class="row mt-3">

                            <div class="col-md-12"><label class="labels">Mobile Number</label><input asp-for="@doctor.ContactNumber" type="text" class="form-control editableDoctor" value="@doctor.ContactNumber" readonly></div>
                    <div class="col-md-12">
                                <label class="labels">Speciality</label><input asp-for="@doctor.Speciality" type="text" class="form-control editableDoctor" value="@doctor.Speciality" readonly>
                        </div>
                            <div class="col-md-12"><label class="labels">Gender</label><input asp-for="@doctor.Gender" type="text" class="form-control editableDoctor" value="@doctor.Gender" readonly></div>
                            <div class="col-md-6"><label class="labels">Department Name</label><input asp-for="@doctor.DepartmentId" type="text" class="form-control editableDoctor" value="@doctor.department?.DepartmentName" readonly></div>
                        </div>
                    </form>
                    <div class="mt-5 text-center"><button class="btn btn-primary profile-button" id="save-doctor-profile-button" type="button" hidden>Save Profile</button></div>
            </div>
                        }
                else if(patient==null && doctor==null && nurse!=null)
                {
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Profile Settings</h4> <i class="fa-solid fa-pen-to-square" id="edit-nurse-profile-icon" style="cursor:pointer;"></i>
                </div>
                    <form method="post">
                    <input asp-for="@nurse.Id" hidden />
                    <div class="row mt-2">
                            <div class="col-md-6"><label class="labels">First Name</label><input asp-for="@nurse.FirstName" type="text" class="form-control editableNurse" value="@nurse.FirstName" readonly></div>
                            <div class="col-md-6"><label class="labels">Last Name</label><input asp-for="@nurse.LastName" type="text" class="form-control editableNurse" value="@nurse.LastName" readonly></div>
                    </div>
                    <div class="row mt-3">

                            <div class="col-md-12"><label class="labels">Mobile Number</label><input asp-for="@nurse.ContactNumber" type="text" class="form-control editableNurse"  value="@nurse.ContactNumber" readonly></div>
                            <div class="col-md-12"><label class="labels">Gender</label><input asp-for="@nurse.Gender" type="text" class="form-control editableNurse" value="@nurse.Gender" readonly></div>
                    </div>
                    <div class="row mt-3">
                            <div class="col-md-6"><label class="labels">Department Name</label><input asp-for="@nurse.DepartmentId" type="text" class="form-control editableNurse" value="@nurse.department?.DepartmentName" readonly></div>
                            <div class="col-md-6"><label class="labels">Shift</label><input asp-for="@nurse.Shift" type="text" class="form-control editableNurse" value="@nurse.Shift" readonly></div>
                    </div>
                    </form>
                    <div class="mt-5 text-center"><button class="btn btn-primary profile-button" id="save-nurse-profile-button" type="button" hidden>Save Profile</button></div>
            </div>
                }
                    
                
                
        </div>
        @if (patient != null)
        {
            <div class="col-md-4">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center experience"><span>Medical report</span><span class="border px-3 p-1 add-experience">Medical report</span></div><br>
                    <div class="col-md-12"><label class="labels">Descriptions</label><input type="text" class="form-control"  value="@(patient.MedicalReports?.Select(d=>d.Description).LastOrDefault())" style="height:300px;" readonly></div> <br>
                    <div class="col-md-12"><label class="labels">Doctor Name</label><input type="text" class="form-control" value="@(patient.MedicalReports?.Select(d=>d.DoctorName).LastOrDefault())" readonly></div>
                </div>
            </div>
        }
        
    </div>
</div>


<script>
    document.getElementById('edit-patient-profile-icon').addEventListener('click', function () {
        // Enable editing for all input elements
        const inputs = document.querySelectorAll('.editablePatient');
        for (const input of inputs) {
            input.removeAttribute('readonly');
        }

        // Show the "Save Profile" button
        document.getElementById('save-patient-profile-button').removeAttribute('hidden');
    });
</script>
<script>
    document.getElementById('edit-doctor-profile-icon').addEventListener('click', function () {
        // Enable editing for all input elements
        const inputs = document.querySelectorAll('.editableDoctor');
        for (const input of inputs) {
            input.removeAttribute('readonly');
        }

        // Show the "Save Profile" button
        document.getElementById('save-doctor-profile-button').removeAttribute('hidden');
    });
</script>
<script>
    document.getElementById('edit-nurse-profile-icon').addEventListener('click', function () {
        // Enable editing for all input elements
        const inputs = document.querySelectorAll('.editableNurse');
        for (const input of inputs) {
            input.removeAttribute('readonly');
        }

        // Show the "Save Profile" button
        document.getElementById('save-nurse-profile-button').removeAttribute('hidden');
    });
</script>

