@model Hospital_System.Models.DTOs.Room.OutRoomDTO
 

@{
    ViewData["Title"] = "Add Room";
    Layout = "_AdminLayout";
}


<h2>Add Room</h2>

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@ViewData["ErrorMessage"]</div>
}

<form asp-controller="Dashboards" asp-action="AddRoom" method="post" enctype="multipart/form-data" class="mb-5 mt-5">
    <div class="form-group">
        <label asp-for="RoomNumber">Room Number</label>
        <input asp-for="RoomNumber" class="form-control" />
        <span asp-validation-for="RoomNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RoomAvailability">Room Availability</label>
        <input asp-for="RoomAvailability" class="form-control" />
        <span asp-validation-for="RoomAvailability" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="NumberOfBeds">Number Of Beds</label>
        <input asp-for="NumberOfBeds" class="form-control" />
        <span asp-validation-for="NumberOfBeds" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DepartmentId">Department Id</label>
        <input asp-for="DepartmentId" class="form-control" />
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
</form>