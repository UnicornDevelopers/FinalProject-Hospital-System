@using Hospital_System.Models.DTOs.MedicalReport;
@model NewMedicalReportDTO


<style>
    .deleteForm{
        margin-top:50px;
        margin-bottom:150px;
    }

    .deleteButton{
        display:inline;
        margin-top:20px;
    }
</style>

<div class="deleteForm">
    <h3>Are you sure you want to delete this Record @Model.Id?</h3>
    <p>Description: @Model.Description</p>

    <form asp-controller="Dashboards" asp-action="DeleteMedicalReport" method="post">
        <input asp-for="Id" hidden />
        <input asp-for="ReportDate" hidden />
        <input asp-for="DoctorId" hidden />
        <input asp-for="PatientId" hidden />
        <input asp-for="Description" hidden />
        <button type="submit" class="btn btn-danger deleteButton">Delete</button>
        <a type="button" class="btn btn-outline-secondary deleteButton" asp-controller="Auth" asp-action="PatientMedicalReport" asp-route-id="@Model.PatientId">Cancel</a>
    </form>

  
</div>