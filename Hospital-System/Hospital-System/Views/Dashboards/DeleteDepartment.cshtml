@model Hospital_System.Models.Department

@{
    ViewData["Title"] = "Confirm Delete";
    Layout = "_AdminLayout";

}

<h2>Confirm Delete</h2>

<p>Are you sure you want to delete the department with ID @Model.Id and name '@Model.DepartmentName'?</p>

<form asp-controller="Dashboards" asp-action="DeleteDepartment" method="post" class="mb-5 mt-5">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="GetDepartments" class="btn btn-secondary">Cancel</a>
</form>