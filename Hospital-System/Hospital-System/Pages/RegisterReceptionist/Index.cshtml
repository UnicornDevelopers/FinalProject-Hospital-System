
@page
@model Hospital_System.Pages.RegisterReceptionist.IndexModel
@{
    ViewBag.Title = "Register In Razor Page";
	Layout = "~/Views/Shared/_Layout.cshtml";

}

<section class="vh-100 gradient-custom mb-3">
    <div class="container py-5 h-100">
        <div class="d-flex justify-content-center align-items-center h-100">
            <div class="col-12">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Registration</h3>
                        <form method="post">
                            @Html.AntiForgeryToken()
                            <div style="font-size: 16px" asp-validation-summary="All"></div>

                            <div class="mb-4">
                                <div class="form-outline">
                                    <label class="form-label" for="Username">Username</label>
                                    <input asp-for="@Model.registerUser.Username" name="Username" type="text" id="Username" class="form-control form-control-lg" />
                                    <span asp-validation-for="@Model.registerUser.Username" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mb-4">
                                <div class="form-outline">
                                    <label class "form-label" for="Password">Password</label>
                                    <input asp-for="@Model.registerUser.Password" name="Password" type="password" id="Password" class="form-control form-control-lg" />
                                </div>
                            </div>

                            <div class="mb-4">
                                <div class="form-outline">
                                    <label class="form-label" for="Email">Email</label>
                                    <input required asp-for="@Model.registerUser.Email" name="Email" type="email" id="Email" class="form-control form-control-lg" />
                                    <span asp-validation-for="@Model.registerUser.Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mb-4">
                                <div class="form-outline">
                                    <label class="form-label" for="Roles">Roles</label>
                                    <input name="Roles" type="text" id="Roles" class="form-control" asp-for="@Model.registerUser.Roles" />
                                    <span asp-validation-for="@Model.registerUser.Roles" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                <input class="btn btn-primary btn-lg" type="submit" value="Register" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



<style>
	.gradient-custom {
		/* fallback for old browsers */
		background: #3876BF;
		/* Chrome 10-25, Safari 5.1-6 */
		background: -webkit-linear-gradient(to bottom right, rgba(50, 147, 251, 1), rgba(45, 87, 108, 1));
		/* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
		background: linear-gradient(to bottom right, rgba(30, 147, 251, 1), rgba(40, 87, 108, 1))
	}

	.form-check-inline {
		display: inline-block;
		margin-right: 2.75rem;
	}

	.card-registration .select-input.form-control[readonly]:not([disabled]) {
		font-size: 1rem;
		line-height: 2.15;
		padding-left: .75em;
		padding-right: .75em;
	}

	.card-registration .select-arrow {
		top: 13px;
	}
</style>	
