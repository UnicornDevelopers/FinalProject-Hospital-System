
@page
@model Hospital_System.Pages.RegisterNurse.IndexModel
@{
    ViewBag.Title = "Register In Razor Page";
	Layout = "~/Views/Shared/_Layout.cshtml";

}



	<section class="contact-us section">
		<div class="container">

			<section class="vh-100" style="background-color: #eee;">
				<div style="font-size: 16px" asp-validation-summary="All"></div>

				<div class="container h-100">
					<div class="row d-flex justify-content-center align-items-center h-100">
						<div class="col-lg-12 col-xl-11">
							<div class="card text-black" style="border-radius: 25px;">
								<div class="card-body p-md-5">
									<div class="row justify-content-center">
										<div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

											<p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4 text-danger">Register</p>

											<form method="post" class="mx-1 mx-md-4">
												@Html.AntiForgeryToken()

												<div class="d-flex flex-row align-items-center mb-4">
													<i class="fas fa-user fa-lg me-3 fa-fw"></i>
													<div class="form-outline flex-fill mb-0">
														<label class="form-label" for="form3Example3c">Username</label>
														<input name="Username" type="text" id="Username" class="form-control" asp-for="@Model.registerUser.Username" />
														<span asp-validation-for="@Model.registerUser.Username"></span>
													</div>
												</div>
												<div class="d-flex flex-row align-items-center mb-4">
													<i class="fas fa-user fa-lg me-3 fa-fw"></i>
													<div class="form-outline flex-fill mb-0">
														<label class="form-label" for="form3Example3c">FirstName</label>
														<input name="FirstName" type="text" id="FirstName" class="form-control" asp-for="@Model.nurse.FirstName" />
														<span asp-validation-for="@Model.nurse.FirstName"></span>
													</div>
												</div>
												<div class="d-flex flex-row align-items-center mb-4">
													<i class="fas fa-user fa-lg me-3 fa-fw"></i>
													<div class="form-outline flex-fill mb-0">
														<label class="form-label" for="form3Example3c">LastName</label>
														<input name="LastName" type="text" id="LastName" class="form-control" asp-for="@Model.nurse.LastName" />
														<span asp-validation-for="@Model.nurse.LastName"></span>
													</div>
												</div>

												<div class="d-flex flex-row align-items-center mb-4">
													<i class="fas fa-lock fa-lg me-3 fa-fw"></i>
													<div class="form-outline flex-fill mb-0">
														<label class="form-label" for="form3Example3c">Password</label>
														<input name="Password" type="password" id="Password" class="form-control" asp-for="@Model.registerUser.Password" />
														<span asp-validation-for="@Model.registerUser.Password"></span>
													</div>
												</div>

												<div class="d-flex flex-row align-items-center mb-4">
													<i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
													<div class="form-outline flex-fill mb-0">
														<label class="form-label" for="form3Example3c">Email</label>
														<input name="Email" type="email" id="Email" class="form-control" asp-for="@Model.registerUser.Email" />
														<span asp-validation-for="@Model.registerUser.Email"></span>
													</div>
												</div>

												<div class="d-flex flex-row align-items-center mb-4">
													<i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
													<div class="form-outline flex-fill mb-0">
@*														<label class="form-label" for="form3Example3c">Roles</label>
*@														<input name="Roles" type="text" id="Roles" class="form-control" asp-for="@Model.registerUser.Roles" hidden value="nurse"/>
														<span asp-validation-for="@Model.registerUser.Roles"></span>
													</div>
												</div>
												<div class="d-flex flex-row align-items-center mb-4">
													<i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
													<div class="form-outline flex-fill mb-0">
														<label class="form-label" for="form3Example3c">Gender</label>
														<input name="Gender" type="text" id="Gender" class="form-control" asp-for="@Model.nurse.Gender" />
														<span asp-validation-for="@Model.nurse.Gender"></span>
													</div>
												</div>
												<div class="d-flex flex-row align-items-center mb-4">
													<i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
													<div class="form-outline flex-fill mb-0">
														<label class="form-label" for="form3Example3c">Contact Number</label>
														<input name="ContactNumber" type="text" id="ContactNumber" class="form-control" asp-for="@Model.nurse.ContactNumber" />
														<span asp-validation-for="@Model.nurse.ContactNumber"></span>
													</div>
												</div>
												<div class="d-flex flex-row align-items-center mb-4">
													<i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
													<div class="form-outline flex-fill mb-0">
														<label class="form-label" for="form3Example3c">Shift</label>
														<input name="Shift" type="text" id="Shift" class="form-control" asp-for="@Model.nurse.Shift" />
														<span asp-validation-for="@Model.nurse.Shift"></span>
													</div>
												</div>
												<div class="d-flex flex-row align-items-center mb-4">
													<i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
													<div class="form-outline flex-fill mb-0">
														<label class="form-label" for="form3Example3c">DepartmentId</label>
														<input name="DepartmentId" type="text" id="DepartmentId" class="form-control" asp-for="@Model.nurse.DepartmentId" />
														<span asp-validation-for="@Model.nurse.DepartmentId"></span>
													</div>
												</div>
												<div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
													<button type="submit" class="btn btn-primary btn-lg">Register</button>
												</div>
											</form>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>


		</div>
	</section>
	